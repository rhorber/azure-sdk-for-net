{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": false,
        "TimestampFormat": "HH:mm:ss "
      }
    }
  },
  "Workflow": {
    "MaxRetries": 3,
    "VerboseMode": false,
    "TimeoutMinutes": 30
  },
  "Copilot": {
    "Model": "claude-sonnet-4-20241022",
    "LogLevel": "warning",
    "AvailableTools": [ "view", "grep", "glob" ],
    "DefaultTimeoutMinutes": 2
  },
  "GitHub": {
    "ApiUrl": "https://api.github.com"
  }
}